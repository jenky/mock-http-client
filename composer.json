{
    "name": "jenky/atlas-mock-client",
    "description": "PSR-18 Mock HTTP Client",
    "keywords": [
        "jenky",
        "atlas",
        "http-client",
        "mock-http-client"
    ],
    "homepage": "https://github.com/jenky/atlas-mock-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Lynh",
            "email": "author@domain.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2.5|^8.0",
        "php-http/discovery": "^1.14",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.3",
        "nyholm/psr7": "^1.5",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Jenky\\Atlas\\Mock\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jenky\\Atlas\\Mock\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse"
        ],
        "cs": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "vendor/bin/phpunit --coverage"
        ],
        "check": [
            "@cs --dry-run",
            "@analyse",
            "@test"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
