{
    "name": "fansipan/mock-client",
    "description": "PSR-18 Mock HTTP Client",
    "keywords": [
        "fansipan",
        "http-client",
        "mock-http-client"
    ],
    "homepage": "https://github.com/phanxipang/mock-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Lynh",
            "email": "contact@lynh.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2.5|^8.0",
        "php-http/discovery": "^1.14",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "fansipan/request-matcher": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.3",
        "nyholm/psr7": "^1.5",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "provide": {
        "psr/http-client-implementation": "1.0"
    },
    "autoload": {
        "psr-4": {
            "Fansipan\\Mock\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fansipan\\Mock\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse"
        ],
        "cs": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "vendor/bin/phpunit --coverage"
        ],
        "check": [
            "@cs --dry-run",
            "@analyse",
            "@test"
        ]
    },
    "suggest": {
        "fansipan/request-matcher": "Provides a reusable request matcher for assertions."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
